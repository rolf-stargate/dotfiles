# script so vifm exit cd in the last selected directory
function fm() {
  if [ -z "$1" ]; then
    ~/.config/vifm/scripts/vifmrun && cd "$(cat ~/.config/vifm/lastdir)"
  else
    cd "$1" && ~/.config/vifm/scripts/vifmrun 
  fi
}

